<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Database Test" Height="155" Width="320"
        WindowStyle="SingleBorderWindow"
        Background="#292D2B" Icon="/res/database.png"
       >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lstNames" />

        <StackPanel Grid.Column="1" Margin="5,0,0,0">
            <Button x:Name="btnLoadKorCity" Margin="0 0 0 0" Click="BtnLoadKorCity_Click">Load KOR City</Button>
            <Button x:Name="btnUpdateKorCity" Margin="0 5 0 0" Click="BtnUpdateKorCity_Click">Update KOR City</Button>
            <Button x:Name="btnDelKorCity" Margin="0 5 0 0" Click="BtnDelKorCity_Click">Delete KOR City</Button>
            <Button x:Name="btnInsertKorCity" Margin="0 5 0 0" Click="BtnInsertKorCity_Click">Insert KOR City</Button>
        </StackPanel>
    </Grid>
</Window>
